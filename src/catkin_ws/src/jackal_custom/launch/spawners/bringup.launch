<launch>

  <!-- general -->
  <arg name="gui" default="false" />  
  <arg name="headless" default="false" />
  <arg name="world_name" default="" />       

  <!-- anchors params -->
  <arg name="AX" default="5" />
  <arg name="AY" default="5" />
  <arg name="AZ" default="2" /> 

  <!-- arg to select real or simulated data -->
  <arg name="real_robot" default="true" /> 
  <arg name="real_UWB" default="false" /> 

  <!-- simulation time -->
  <arg name="use_sim_time" default="false" />

  <!-- Launch Gazebo with the specified world -->
  <!-- this is run when the arg $real_robot is false -->
  <group unless="$(arg real_robot)">
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="debug" value="0" />
      <arg name="gui" value="$(arg gui)" />
      <arg name="use_sim_time" value="$(arg use_sim_time)" />
      <arg name="headless" value="$(arg headless)" />
      <arg name="world_name" value="$(arg world_name)" />    
    </include>
  </group>

  <!-- create map reference frame -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="WorldToMap" args="0 0 0 0 0 0 1 world map" />  

  <!-- BEGIN ROBOT 1 -->
  <group ns="UGV01">    

    <!-- ANCHORS SERVER -->
    <include file="$(find jackal_range)/launch/anchors_real.launch" >
      <arg name="AX" value="$(arg AX)" />
      <arg name="AY" value="$(arg AY)" />
      <arg name="AZ" value="$(arg AZ)" />
      <arg name="ns" value="UGV01/" />     
      <arg name="real" value="$(arg real_UWB)" />  
    </include>

    <!-- spawn robot -->
    <include file="$(find jackal_custom)/launch/spawners/robot.launch" >
      <arg name="init_pose" value="-x 2.4 -y 1.5 -z 0 -R 0 -P 0 -Y 0" />
      <arg name="robot_name"  value="Jack01" />
      <arg name="joystick" value="true" />
      <arg name="joy_dev" value="/dev/input/js0" />
      <arg name="enable_ekf" value="true" /> 
      <arg name="ns" value="UGV01/" />      
      <arg name="real_UWB" value="$(arg real_UWB)" />
      <arg name="real_robot" value="$(arg real_robot)" />
    </include>

    <!-- publish TF -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="MapToOdom" args="0 0 0 0 0 0 1 map UGV01/odom" />   

    <!-- ANCHORS SERVER -->
    <include file="$(find jackal_range)/launch/anchors_estimate.launch" > 
      <arg name="AX" value="$(arg AX)" />
      <arg name="AY" value="$(arg AY)" />
      <arg name="AZ" value="$(arg AZ)" />
      <arg name="ns" value="UGV01/" />     
      <arg name="real" value="$(arg real_UWB)" />       
    </include>

    <!-- DISTANCE VISUALIZATION -->
    <include file="$(find jackal_range)/launch/vis_line.launch" >
      <arg name="ns" value="UGV01/" />      
    </include>     
    
  </group>
  
</launch>