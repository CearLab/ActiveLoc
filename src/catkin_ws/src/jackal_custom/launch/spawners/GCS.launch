<launch>

  <param name="use_gui" value="true"/>
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find jackal_custom)/rviz/default.rviz" />
  <arg name="joy_dev" default="/dev/input/js0" />

  <!-- namespaces -->
  <arg name="ns" default="" />

  <!-- BEGIN ROBOT 1 -->
  <group ns="UGV01">

    <!-- navigation -->
    <include file="$(find jackal_move)/navigation/launch/move_base.launch">
        <arg name="ns" value="UGV01/" />
    </include>

    <!-- PF node -->
    <include file="$(find jackal_pf)/launch/PF_instance.launch">
        <arg name="ns" value="$(arg ns)" />
    </include>

    <!-- DISTANCE VISUALIZATION -->
    <include file="$(find jackal_range)/launch/vis_line.launch" >
      <arg name="ns" value="UGV01/" />      
    </include> 

  </group>


</launch>