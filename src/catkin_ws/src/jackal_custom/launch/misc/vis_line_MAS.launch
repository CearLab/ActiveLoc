<launch>    

    <!-- Configuration of Jackal which you would like to simulate. -->
    <arg name="ns" default="" /> 

    <!-- LINE VISUALIZATION - GROUND TRUTH -->
    <node pkg="jackal_custom" name="UGV_vis_line_MAS_GT" type="UGV_vis_line_MAS.py" >        
        <param name="odom_topic" type="string" value="/ground_truth/state" />        
        <param name="pub_topic" type="string" value="/vis_line/MAS/ground_truth" />
        <param name="color" type="string" value="0.0 1.0 0.0 1.0" />
    </node>  

    <!-- LINE VISUALIZATION - FROM EKF -->
    <node pkg="jackal_custom" name="UGV_vis_line_MAS_EKF" type="UGV_vis_line_MAS.py" >        
        <param name="odom_topic" type="string" value="/odometry/filtered" />        
        <param name="pub_topic" type="string" value="/vis_line/MAS/ekf" />
        <param name="color" type="string" value="1.0 0.0 0.0 1.0" />
    </node>  

</launch>